<div id="<%= game.name%>">
    <div class="row justify-content-center py-3">
        <div class="col">
            <h3 class="mb-0">
                <a href='/user/details/<%= game._id %>'>
                    <%= game.name %>
                </a>
            </h3>
            <p class="text-secondary">
                Created <%= new Date(game.creationDate).getMonth() + 1 + "/" + 
                            new Date(game.creationDate).getDate() + "/" + 
                            new Date(game.creationDate).getYear()%>
            </p>
            <p class="description">
                <%= game.description%>
            </p>
            
            <% if(game.userId.toString() === user._id.toString() || adminView){ %>
                <form action="/user/delete" method="POST" id="<%= game.name%>DeleteForm">
                    <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                    <input id="<%= game.name%>Input" type="hidden" value="<%= game.name %>" name="gameName">
                </form>
            
                <% if(adminView){ %>
                    <form class="d-inline" id="<%= game.name%>IdApproveForm" <%= game.isApproved ? 'action="/admin/revoke"' : 'action="/admin/approve"' %> method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="hidden" name="gameName" value="<%= game.name %>">
                    </form>
                    <button class="btn btn-primary m-1" onclick="approveGame('<%=game.name%>')" type="submit"
                        <%= !game.isApproved ? 'class="positive ui right floated button"' : 'class="negative ui right floated button"' %>>
                        <%= !game.isApproved ? 'Approve' : 'Revoke' %>
                    </button>
                <% } %>
                <button class="btn btn-primary m-1" onclick="showDeleteModal('<%=game.name%>', '<%= game.description%>')">Delete</button>
            <% } %>
        </div>
    </div>
</div>