<div id="<%= user.username%>">
    <div class="row justify-content-center py-3">
        <div class="col">
            <h3 class="mb-0">
                <a href='#'>
                    <%=user.firstName + " " + user.lastName %>
                </a>
            </h3>
            <p class="text-secondary meta">
                <%= user.username%>
            </p>
    
            <% if(user.isAdmin) { %>
            <form class="d-inline" action="/admin/demote" method="POST" id="<%= user.username%>MakeAdminForm">
                <input type="hidden" value="<%= user.username %>" name="username">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-danger m-1" type="submit">Demote</button>
            </form>
            <% } else { %>
            <form class="d-inline" action="/admin/promote" method="POST" id="<%= user.username%>MakeAdminForm">
                <input type="hidden" value="<%= user.username %>" name="username">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-success m-1" type="submit">Elevate</button>
            </form>
            <% } %>
            <% if(!user.isAuthorized) { %>
            <form class="d-inline" action="/admin/authorize" method="POST" id="<%= user.username%>MakeAdminForm">
                <input type="hidden" value="<%= user.username %>" name="username">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-success m-1" type="submit">Authorize</button>
            </form>
            <% } else { %>
            <form class="d-inline" action="/admin/deauthorize" method="POST">
                <input type="hidden" value="<%= user.username %>" name="username">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-danger m-1" type="submit">Deauthorize</button>
            </form>
            <% } %>
            <form class="d-inline" action="/admin/delete" method="POST">
                <input type="hidden" value="<%= user.username %>" name="username">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button class="btn btn-danger m-1" type="submit">Delete</button>
            </form>
        </div>
    </div>
</div>