<%- include('../includes/header.ejs') %>

<body>

  <div class="ui container">
    <h1 class="ui centered header">
      Welcome to the MOCS Arcade
      <div class="sub header">A place to distribute your games</div>
    </h1>
    <% if(errorMessage) {%>
      <div class="ui warning message">
        <div class="header">
          Invalid Username or Password
        </div>
        Please check your credentials and try again
      </div>
  <% } %> 

    <div class="ui padded segment">
      <form class="ui form" action="/login" method="POST">
        <div class="field">
          <label>Username</label>
          <input type="text" name="username">
        </div>
        <div class="field">
          <label>Password</label>
          <input type="password" name="password">
        </div>

        <input type="hidden" name="_csrf" value="<%= csrfToken%>">
        <button type="submit" class="ui fluid blue button">Login</button>
      </form>
    </div>

    <div class="ui padded segment">
    <form class="ui form" action="/login/register" method="GET">
      <button type="submit" class="ui yellow fluid button">Create an account</button>
    </form>
  </div>
  </div>

  <%- include('../includes/footer.ejs') %>