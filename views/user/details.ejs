<%- include('../includes/header.ejs') %>
<% canEdit = !isEdit && (game.userId == user._id.toString() || user.isAdmin) %>
<%- include('../includes/nav.ejs', {active: "Games", editGameID: (canEdit ? game._id : undefined)}) %>

    <div class="container">

        <div class="py-5">
            <h1 class="text-center"><%= game.name %></h1>
        </div>

        <div class="row">
            <% if(message) {%>
                <div class="ui warning message">
                  <div class="header">
                    Game name taken.
                  </div>
                  Please pick a different name.
                </div>
            <% } %>
            <div class="col-6">
                <form action="/user/upload" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="gameID" value="<%= game._id %>">
                    <div class="py-1">
                        <label for="name">Game Name:</label>
                        <input type="text" class="form-control" name="name" id="name" value="<%= game.name %>" <%= !isEdit ? 'disabled' : '' %>>
                    </div>
                    <div class="py-1">
                        <label for="description">Description:</label>
                        <textarea rows="5" class="form-control" name="description" id="description" <%= !isEdit ? 'disabled' : '' %>><%= game.description %></textarea>
                    </div>
                    <% if(isEdit) { %>
                        <div class="py-2">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    <% } %>
                </form>
            </div>
            <div class="col-6">
                <img class="w-100 mt-5" src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fassets.rockpapershotgun.com%2Fimages%2F2018%2F08%2Fdead-cells-review-3.jpg&f=1&nofb=1">
            </div>
        </div>
    </div>
       

    <%- include('../includes/footer.ejs') %>




